{
  "name": "use-csv",
  "version": "1.0.0",
  "description": "React hook for using exportable csv in convenient way",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "files": [
    "index.d.ts",
    "/lib"
  ],
  "keywords": [
    "react",
    "hooks",
    "react-hooks",
    "csv",
    "csv-export"
  ],
  "author": {
    "name": "Jędrzej Łukasiuk",
    "email": "jedrzej.lukasiuk@gmail.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "jest": "^27.1.1",
    "react": "^17.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "prettier": {
    "semi": false,
    "printWidth": 90,
    "tabWidth": 2,
    "singleQuote": true
  },
  "dependencies": {
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src"
    ]
  }
}
